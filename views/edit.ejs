<%- include ("partials/header.ejs") %>
<main>
  <h1>Edit Post</h1>
  <form class="form-container" action="/submit" method="POST">
    <label for="title"> Title: </label>
    <input type="text" name="title" placeholder="<%=post.title%>" value="<%=post.title%>" required />
    <label for="content"> Content: </label>
    <textarea class="edit-post" name="content" placeholder="<%=post.content%>" required><%=post.content%></textarea>
    <button type="submit">Edit Post</button>
  </form>
</main>
